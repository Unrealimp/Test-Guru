
<h3> <%= @test_name.capitalize%> </h3>
<br>

<table>
    <tr>
        <th>Вопрос</th>
        <th colspan="3">Действие</th>
        
    <tr>

    <% @result.each do |question| %>
        <tr>
            <td><%=  question.body %></td>
            <td><%= link_to 'Show', question_path(question)%></td>
            <td><%= link_to 'Edit', edit_question_path(question)%></td>
            <td>
                <%= link_to 'Delete',
                            question_path(question),
                            method: :delete,
                            data: {confirm: 'Подтвердите удаление'}
                             %>
            </td>
           
            
        <tr>
    <%end%>
</table>

<%= link_to 'Новый вопрос', new_test_question_path %>